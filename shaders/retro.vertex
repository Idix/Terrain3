#version 330

in vec4 vVertex;
in vec2 vTexCoord;

uniform mat4 mvpMatrix;
uniform mat4 mvMatrix;

out vec2 vVaryingTexCoords;

void main(void)
{
    vVaryingTexCoords = vTexCoord;
    vec4 vertex = vVertex;
    vec4 worldVertex = vVertex * mvMatrix;
    vertex.x += cos(worldVertex.z)*0.1;
    gl_Position = mvpMatrix * vertex;
}
